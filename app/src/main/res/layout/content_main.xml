<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:statusBarBackground="@color/Torquoise">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/Torquoise"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:visibility="visible">>

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/background_light"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:visibility="gone"
                app:layout_collapseMode="pin" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/handleshinges"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:layout_collapseMode="parallax" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/DOORFITTINGS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/ll_doorfittings"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:background="@drawable/texture1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/IDOORFITTINGS"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/doorfittingd" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#16b882"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:shadowColor="#A570FF"
                        android:shadowDx="20"
                        android:shadowDy="10"
                        android:shadowRadius="20"
                        android:text="DOOR FITTINGS"
                        android:textColor="#FFFFF0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/HOMEACCESS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/ll_homeaccessories"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:background="@drawable/texture1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/IHOMEACCESS"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:contentDescription="TODO"
                        android:src="@drawable/homeaccess" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#16b882"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:shadowColor="#A570FF"
                        android:shadowDx="20"
                        android:shadowDy="10"
                        android:shadowRadius="20"
                        android:text="HOME ACCESSORIES"
                        android:textColor="#FFFFF0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/KITCHENSYSTEM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/ll_kitchensystem"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:background="@drawable/texture1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/IKITCHENSYSTEM"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/kitchensystem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#16b882"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:shadowColor="#A570FF"
                        android:shadowDx="20"
                        android:shadowDy="10"
                        android:shadowRadius="20"
                        android:text="KITCHEN SYSTEM"
                        android:textColor="#FFFFF0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/BATHROOMACCESS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/ll_bathroomaccessories"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:background="@drawable/texture1"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/IBATHROOMACCESS"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/bathroomaccess" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="#16b882"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:shadowColor="#A570FF"
                        android:shadowDx="20"
                        android:shadowDy="10"
                        android:shadowRadius="20"
                        android:text="BATHROOM ACCESSORIES"
                        android:textColor="#FFFFF0"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="normal" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>